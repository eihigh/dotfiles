# shell共通設定

# PATH
export PATH=$PATH:/usr/local/go/bin
export PATH=$PATH:~/go/bin

if type rbenv > /dev/null 2>&1
then
	eval "$(rbenv init -)"
fi

# ENV
export TERM=xterm-256color
export EDITOR=vim

# aliases
alias e='vim'
alias d='docker'
alias dc='docker-compose'
alias n='fg'
alias g='lazygit'
alias gs='git status'
alias i='git status -sb'
alias ga='git add'
alias gc='git commit'
alias gd='git diff'
alias gm='git merge --no-ff'
alias gk='git checkout'
alias gp='git pull -p'
alias gl='git log'
alias gb='git branch'

alias dev='ssh dev@localhost -p 22022'

# scripts
case "${OSTYPE}" in
	darwin*)
		alias ls="ls -G"
		alias l_zqx="ls -alG"

		alias tac="tail -r"
		;;
	linux*)
		alias ls="ls --color"
		alias l_zqx="ls -al --color"
		;;
esac

[ -f ~/.anyshrc.local ] && source ~/.anyshrc.local
