t_zqx() {
	local dir
	dir=$(find ${1:-.} -path '*/\.*' -prune \
	                -o -type d -print 2> /dev/null | fzf +m) &&
	cd "$dir"
}

ta_zqx() {
	local dir
	dir=$(find ${1:-.} -type d 2> /dev/null | fzf +m) && cd "$dir"
}

g_zqx() {
	local dir
	dir=$(ghq list --full-path | fzf) && cd "$dir"
}

# zsh changing helper
z_zqx() {
	zsh -d -f
	source $SSHHOME/.sshrc.d/zshrc
}
